%h1 Shipping Address

= form_for(@address, url: address_path) do |f|
  %table#shipping-address-form
    %tr
      %td= f.label :name
      %td= f.text_field :name

    %tr
      %td= f.label :line1, 'Street Address'
      %td= f.text_field :line1

    %tr
      %td= f.label :city
      %td= f.text_field :city

    %tr
      %td= f.label :state_province, 'State'
      %td= f.select :state_province, options_for_select(us_states),{}, class: 'form-control'

    %tr
      %td= f.label :postal_code
      %td= f.text_field :postal_code

    %tr
      %td &nbsp;
      %td= f.submit 'Proceed to Checkout', class: 'btn'
